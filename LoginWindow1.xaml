<Window x:Class="PRN212_project.LoginWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_project"
        mc:Ignorable="d"
        Title="LoginWindow1" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="username"/>
            <TextBox Name="tb_username" />
            <Label Content="password"/>
            <TextBox Name="tb_password" />
            <Button Content="login" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
