<Window x:Class="PRN212_project.UserWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_project"
        mc:Ignorable="d"
        Title="Quản lý thông tin cư dân" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundColor}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="QUẢN LÝ THÔNG TIN CƯ DÂN"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"
                   Foreground="{StaticResource PrimaryColor}"/>

        <!-- Main Content -->
        <Border Grid.Row="1" 
                Background="White"
                CornerRadius="8"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Form Panel -->
                <Border Grid.Column="0" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="0,0,1,0" 
                        Padding="10,0,20,0">
                    <StackPanel>
                        <TextBlock Text="Thông tin cư dân"
                                 FontSize="18"
                                 FontWeight="Medium"
                                 Margin="0,0,0,20"
                                 Foreground="{StaticResource TextColor}"/>

                        <Label Content="Mã cư dân"/>
                        <TextBox Name="tb_userid" IsReadOnly="True"/>

                        <Label Content="Họ và tên"/>
                        <TextBox Name="tb_fullname"/>

                        <Label Content="Email"/>
                        <TextBox Name="tb_Email"/>

                        <Label Content="Mật khẩu"/>
                        <PasswordBox Name="tb_Password" 
                                   Padding="8,5"
                                   Margin="5"/>

                        <Label Content="Vai trò"/>
                        <ComboBox Name="cb_role"/>

                        <Label Content="Địa chỉ"/>
                        <TextBox Name="tb_Address"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                Height="60"/>

                        <StackPanel Orientation="Horizontal" 
                                  Margin="0,20,0,0"
                                  HorizontalAlignment="Center">
                            <Button Content="Thêm mới" 
                                    Name="btn_user_add"
                                    Click="btn_user_add_Click">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                        <Setter Property="Background" Value="#4CAF50"/>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="Cập nhật" 
                                    Name="btn_user_edit"
                                    Click="btn_user_edit_Click">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                        <Setter Property="Background" Value="#FF9800"/>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="Xóa" 
                                    Name="btn_user_delete"
                                    Click="btn_user_delete_Click">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                        <Setter Property="Background" Value="#F44336"/>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- DataGrid -->
                <Grid Grid.Column="1" Margin="20,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Danh sách cư dân"
                             FontSize="18"
                             FontWeight="Medium"
                             Margin="0,0,0,20"
                             Foreground="{StaticResource TextColor}"/>

                    <DataGrid Grid.Row="1"
                             SelectionChanged="datagrid_users_SelectionChanged"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             Name="datagrid_users"
                             SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mã cư dân" Width="Auto" Binding="{Binding UserId}"/>
                            <DataGridTextColumn Header="Họ và tên" Width="*" Binding="{Binding FullName}"/>
                            <DataGridTextColumn Header="Email" Width="*" Binding="{Binding Email}"/>
                            <DataGridTextColumn Header="Vai trò" Width="Auto" Binding="{Binding Role}"/>
                            <DataGridTextColumn Header="Địa chỉ" Width="*" Binding="{Binding Address}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
